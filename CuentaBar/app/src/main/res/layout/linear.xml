<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <AutoCompleteTextView
            android:id="@+id/autoCamarero"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del camarero"
            android:inputType="text"
            android:completionThreshold="3"
            android:layout_marginBottom="16dp"/>


        <EditText
            android:id="@+id/editTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total de la cuenta (€)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />


        <CheckBox
            android:id="@+id/checkPropina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Incluir propina"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:id="@+id/textPorcentaje"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Porcentaje de propina: 10%"
            android:layout_marginBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekPropina"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="30"
            android:progress="10"
            android:layout_marginBottom="16dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Método de pago:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radioGroupPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectivo"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/radioTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta"/>
        </RadioGroup>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calificación del servicio:"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RatingBar
            android:id="@+id/ratingServicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_marginBottom="16dp"/>


        <Button
            android:id="@+id/btnCalcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular Total"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/black"/>


        <TextView
            android:id="@+id/textResultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

    </LinearLayout>
</ScrollView>
