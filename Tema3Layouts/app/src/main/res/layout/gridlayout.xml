<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:columnCount="3"
    android:orientation="horizontal"
    android:rowCount="3"
    android:useDefaultMargins="true">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0046FF"
        android:text="Botón 1"
        tools:ignore="HardcodedText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0A92FF"
        android:text="Botón 2"
        tools:ignore="HardcodedText"
        android:layout_rowSpan="2"
        android:layout_gravity="fill"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#002FD0"
        android:text="Botón 3"
        tools:ignore="HardcodedText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#00BCD4"
        android:text="Botón 4"
        tools:ignore="HardcodedText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#3F51B5"
        android:text="Botón 5"
        tools:ignore="HardcodedText"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#0B1B73"
        android:text="Botón 6"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        tools:ignore="HardcodedText"/>
</GridLayout>